<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_79sdp"
            android:src="@drawable/bg_appbar"
            android:scaleType="fitXY"/>

        <View
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/transparent_dark_20"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:layout_below="@id/status_bar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/iv_burger"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_menu_48dp" />

            <TextView
                fontPath="fonts/Roboto-Medium.ttf"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv_burger"
                android:layout_marginLeft="@dimen/_20sdp"
                android:text="@string/home_dashboard"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="@dimen/toolbar_title_size" />

            <ImageView
                android:id="@+id/iv_notify"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_notification_48dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_10sdp"
            android:clickable="true"
            android:src="@drawable/ic_new_24dp"
            app:backgroundTint="@color/status_bar_bg"
            app:elevation="@dimen/_10sdp"
            app:rippleColor="@color/fab_ripple" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:layout_marginTop="@dimen/status_bar_height">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="@dimen/_180sdp">

                <ImageView
                    android:id="@+id/iv_blur_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/black_gradient_drawable_profile"/>

                <RelativeLayout
                    android:layout_width="@dimen/_100sdp"
                    android:layout_centerInParent="true"
                    android:layout_height="@dimen/_100sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_profile_image"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp" />

                    <ProgressBar
                        android:id="@+id/pb_load_image"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:indeterminate="true"
                        android:layout_height="@dimen/_30sdp" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/tv_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

            </RelativeLayout>

            <ListView
                android:id="@+id/lv_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp" />

        </LinearLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>