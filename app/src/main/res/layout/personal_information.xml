<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_personal_information"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/_4sdp"
    android:paddingLeft="@dimen/_16sdp"
    android:paddingRight="@dimen/_16sdp"
    android:background="@android:color/white">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:theme="@style/SignUpFieldsStyle"
        app:hintTextAppearance="@style/SignupFloatingLabelStyle"
        app:passwordToggleEnabled="false">

        <android.support.design.widget.TextInputEditText
            fontPath="fonts/Roboto-Medium.ttf"
            android:id="@+id/et_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/first_name"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:minLines="1"
            android:textColor="@color/status_bar_bg"
            android:textSize="@dimen/_13ssp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:theme="@style/SignUpFieldsStyle"
        app:hintTextAppearance="@style/SignupFloatingLabelStyle"
        app:passwordToggleEnabled="false">

        <android.support.design.widget.TextInputEditText
            fontPath="fonts/Roboto-Medium.ttf"
            android:id="@+id/et_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/last_name"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:minLines="1"
            android:textColor="@color/status_bar_bg"
            android:textSize="@dimen/_13ssp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:theme="@style/SignUpFieldsStyle"
        app:hintTextAppearance="@style/SignupFloatingLabelStyle"
        app:passwordToggleEnabled="false">

        <android.support.design.widget.TextInputEditText
            fontPath="fonts/Roboto-Medium.ttf"
            android:id="@+id/et_contact_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/contact_no"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:minLines="1"
            android:maxLength="11"
            android:textColor="@color/status_bar_bg"
            android:textSize="@dimen/_13ssp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:theme="@style/SignUpFieldsStyle"
        app:hintTextAppearance="@style/SignupFloatingLabelStyle"
        app:passwordToggleEnabled="false">

        <android.support.design.widget.TextInputEditText
            fontPath="fonts/Roboto-Medium.ttf"
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:minLines="1"
            android:textColor="@color/status_bar_bg"
            android:textSize="@dimen/_13ssp"/>
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_48sdp">

        <sanmateo.com.profileapp.customviews.CustomSpinner
            android:id="@+id/spnr_gender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dropDownWidth="match_parent"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_spinner"
            fontPath="fonts/Roboto-Medium.ttf"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:paddingLeft="@dimen/_5sdp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:textColor="@android:color/darker_gray"
            android:text="@string/gender"
            android:textSize="@dimen/_13ssp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/ic_down_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

</LinearLayout>