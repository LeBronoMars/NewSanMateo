<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- color primary button -->
    <style name="AppTheme.Button.Primary" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- color primary dark button -->
    <style name="AppTheme.Button.PrimaryDark" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/status_bar_bg_2</item>
        <item name="colorAccent">@color/status_bar_bg</item>
    </style>


    <!-- dialog animation -->
    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


    <style name="FieldsStyle" parent="AppTheme">
        //hint color And Label Color in False State
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/black</item>
        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="NewFieldsStyle" parent="AppTheme">
        //hint color And Label Color in False State
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">@android:color/darker_gray</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="SignUpFieldsStyle" parent="AppTheme">
        //hint color And Label Color in False State
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textColor">@color/status_bar_bg</item>
        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">@color/status_bar_bg</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/status_bar_bg</item>
    </style>

    <style name="FloatingLabelStyle" parent="TextAppearance.AppCompat">
        //hint color And Label Color in False State
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="LogInFloatingLabelStyle" parent="TextAppearance.AppCompat">
        //hint color And Label Color in False State
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="LoginEditTextTheme" parent="TextAppearance.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="SignupFloatingLabelStyle" parent="TextAppearance.AppCompat">
        //hint color And Label Color in False State
        <item name="android:textColor">@color/status_bar_bg</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>




</resources>
